# - ------------------------------------------------------------------------ - #
# Release Build Only #
ifdef NDEBUG
DEFINES				+=	NDEBUG
endif # NDEBUG #
# - ------------------------------------------------------------------------ - #
# Allow Overloading of default GCC and G++ commands #
ifndef GCC
GCC					:=	gcc
endif # GCC #
# - ------------------------------------------------------------------------ - #
ifndef GXX
GXX					:=	g++
endif # GXX #
# - ------------------------------------------------------------------------ - #

# - ------------------------------------------------------------------------ - #
# Compiler and Linker Flags #
CFLAGS				+=	-fno-strict-aliasing
CPPFLAGS			+=	-fno-rtti -fno-strict-aliasing
LDFLAGS				+=	
# - ------------------------------------------------------------------------ - #

# - ------------------------------------------------------------------------ - #
# Optimization #
# - ------------------------------------------------------------------------ - #
ifdef OSIZE
# - ------------------------------------------------------------------------ - #
CFLAGS				+=	-Os
CPPFLAGS			+=	-Os
# - ------------------------------------------------------------------------ - #
else ifdef O3
# - ------------------------------------------------------------------------ - #
CFLAGS				+=	-O3
CPPFLAGS			+=	-O3
# - ------------------------------------------------------------------------ - #
else
# - ------------------------------------------------------------------------ - #
CFLAGS				+=	-O2
CPPFLAGS			+=	-O2
# - ------------------------------------------------------------------------ - #
endif # OSIZE #
# - ------------------------------------------------------------------------ - #

default:
	@echo Success!
