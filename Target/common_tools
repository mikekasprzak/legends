# - ------------------------------------------------------------------------ - #
TreeTool			:=	Tools/TreeTool.sh
# - ------------------------------------------------------------------------ - #

# - ------------------------------------------------------------------------ - #
# Release Build Only #
ifdef NDEBUG
DEFINES				+=	NDEBUG
endif # NDEBUG #
# - ------------------------------------------------------------------------ - #

# - ------------------------------------------------------------------------ - #
# Allow Overloading of default GCC and G++ commands #
# - ------------------------------------------------------------------------ - #
ifndef GCC
GCC					:=	gcc
endif # GCC #
# - ------------------------------------------------------------------------ - #
ifndef GXX
GXX					:=	g++
endif # GXX #
# - ------------------------------------------------------------------------ - #
ifndef GLD
GLD					:=	ld
endif # GLD #
# - ------------------------------------------------------------------------ - #

# - ------------------------------------------------------------------------ - #
ifdef OSIZE # Optimized for Size #
# - ------------------------------------------------------------------------ - #
CFLAGS				+=	-Os
CPPFLAGS			+=	-Os
# - ------------------------------------------------------------------------ - #
else ifdef O3 # Optimized for Space #
# - ------------------------------------------------------------------------ - #
CFLAGS				+=	-O3
CPPFLAGS			+=	-O3
# - ------------------------------------------------------------------------ - #
else ifdef O0 # No Optimizations #
# - ------------------------------------------------------------------------ - #
CFLAGS				+=	-O0
CPPFLAGS			+=	-O0
# - ------------------------------------------------------------------------ - #
else # Default #
# - ------------------------------------------------------------------------ - #
CFLAGS				+=	-O2
CPPFLAGS			+=	-O2
# - ------------------------------------------------------------------------ - #
endif # Optimizations #
# - ------------------------------------------------------------------------ - #
